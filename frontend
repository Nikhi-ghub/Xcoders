<script>
const scene = document.getElementById('scene');
const card = document.getElementById('card');
const glare = document.getElementById('glare');
const avatar = document.getElementById('avatarContainer');

const limit = 15;
const sensitivity = 20;
const lerpFactor = 0.1;

let currentX = 0, currentY = 0;
let targetX = 0, targetY = 0;

document.addEventListener('mousemove', (e) => {
  if (window.matchMedia("(hover: none)").matches) return;

  const rect = scene.getBoundingClientRect();
  const x = e.clientX - rect.left;
  const y = e.clientY - rect.top;
  
  const centerX = rect.width / 2;
  const centerY = rect.height / 2;

  const rotateX = ((y - centerY) / centerY) * -limit;
  const rotateY = ((x - centerX) / centerX) * limit;

  targetX = rotateX;
  targetY = rotateY;

  const glareX = 50 + ((x - centerX) / centerX) * 40;
  const glareY = 50 + ((y - centerY) / centerY) * 40;
  
  glare.style.background = `radial-gradient(circle at ${glareX}% ${glareY}%, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0) 50%)`;
  glare.style.opacity = '1';
});

document.addEventListener('mouseleave', () => {
  targetX = 0;
  targetY = 0;
  glare.style.opacity = '0';
});

function animate() {
  currentX += (targetX - currentX) * lerpFactor;
  currentY += (targetY - currentY) * lerpFactor;

  card.style.transform = `rotateX(${currentX}deg) rotateY(${currentY}deg)`;

  avatar.style.transform = `translateZ(60px) rotateX(${currentX * 0.5}deg) rotateY(${currentY * 0.5}deg) translateX(${currentY * -0.5}px)`;

  requestAnimationFrame(animate);
}

animate();

const issueInput = document.getElementById('issue');
const countSpan = document.getElementById('count');
const form = document.getElementById('issueForm');
const btn = document.getElementById('submitBtn');
const responseBox = document.getElementById('response');

issueInput.addEventListener('input', () => {
  countSpan.textContent = issueInput.value.length;
});

form.addEventListener('submit', async (e) => {
  e.preventDefault();
  btn.disabled = true;
  const originalHtml = btn.innerHTML;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';

  await new Promise(r => setTimeout(r, 1500));

  btn.innerHTML = originalHtml;
  btn.disabled = false;
  
  responseBox.className = 'success';
  responseBox.innerHTML = '<i class="fas fa-check-circle"></i> <div><b>Ticket Created!</b> We will review shortly.</div>';
  responseBox.style.display = 'flex';
  
  confetti({
    particleCount: 150,
    spread: 70,
    origin: { y: 0.6 },
    colors: ['#6366f1', '#ec4899', '#ffffff']
  });

  form.reset();
  countSpan.textContent = '0';
});
</script>
</body>
